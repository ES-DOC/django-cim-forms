{% load serialization_filters %}

{# TODO: THESE ARE HARD-CODED #}

<documentID>{{ model.get_id }}</documentID>
<documentVersion>{{ model.get_major_version }}</documentVersion>
<documentAuthor>
    {% with property=model|get_standard_property_by_name:"documentAuthor" %}
        {% with "questionnaire/serialization/ESDOC_XML/_standard_property_relationship.xml" as template %}
            {% include template %}
        {% endwith %}
    {% endwith %} {# /property #}
</documentAuthor>
<documentStatus>
    {% with property=model|get_standard_property_by_name:"documentStatus" %}
        {{ property.enumeration_value }}
    {% endwith %} {# /property #}
</documentStatus>
<documentCreationDate>{{ model.created|date:"c" }}</documentCreationDate>
