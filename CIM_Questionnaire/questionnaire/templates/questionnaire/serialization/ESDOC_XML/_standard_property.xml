{% load serialization_filters %}

{# this is going to be used in CIM_XML format #}
{#{% with tagname=property|get_fully_qualified_tagname %}#}
{% with tagname=property.name %}

    <{{ tagname }}>

        {% with property_type=property.field_type %}
            {% if property_type == "ATOMIC" %}
                {% with "questionnaire/serialization/ESDOC_XML/_standard_property_atomic.xml" as template %}
                    {% include template %}
                {% endwith %}
            {% elif property_type == "ENUMERATION" %}
                {% with "questionnaire/serialization/ESDOC_XML/_standard_property_enumeration.xml" as template %}
                    {% include template %}
                {% endwith %}
            {% elif property_type == "RELATIONSHIP" %}
                {# TODO: IF IS_REFERENCE...  #}
                {% with "questionnaire/serialization/ESDOC_XML/_standard_property_relationship.xml" as template %}
                    {% include template %}
                {% endwith %}
            {% endif %}
        {% endwith %} {# /property_type #}

    </{{ tagname }}>

{% endwith %} {# /tagname #}