{% load q_tags %}
{% load q_tags_publications %}

{% spaceless %}

<{{ proxy.name }} ontologyTypeKey="{{ proxy|get_ontology_type_key }}">

    <!-- content generated by ES-DOC Questionnaire (v{% q_version %}) at {% now "c" %} -->
    <!-- local pk={{ model.pk }} -->

    {% if model.is_document and model.is_root %}
        {% with "questionnaire/publications/%s/publication_document.xml"|format:publication_format as template %}
            {% include template %}
        {% endwith %}
    {% endif %}

    {% block content %}
        you forgot to provide content!
    {% endblock %} {# /content #}

</{{ proxy.name }}>

{% endspaceless %}
