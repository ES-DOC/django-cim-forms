{% load serialization_filters %}

{# this is going to be used in CIM_XML format #}
{#{% with tagname=property|get_fully_qualified_tagname %}#}
{% with tagname=property.name %}

    {# there are some special-cases for serializing ESDOC_XML standard properties #}
    {# b/c the ESDOC_XML format does not map to the CIM XML format _exactly_ #}
    {% if tagname|lower == "license" %}
        {% with license=property.get_value|index:0 %}
            {% with "questionnaire/serialization/ESDOC_XML/_standard_property_license.xml" as template %}
                {% include template %}
            {% endwith %}
        {% endwith %} {# /license #}
    {% else %}

        {% with property_type=property.field_type %}

            {% if property_type == "ATOMIC" %}

                <{{ tagname }}>{{ property.get_value }}</{{ tagname }}>

            {% elif property_type == "ENUMERATION" %}
                <{{ tagname }}>{# separating values by "|" rather than in explicit tags #}{% for value in property.get_value %}{{ value }}{% if not forloop.last %} | {% endif %}{% endfor %}</{{ tagname }}>

            {% elif property_type == "RELATIONSHIP" %}

                {% if property.proxy.is_multiple %}
                    <{{ tagname|get_plural }}>
                {% endif %} {# /is_multiple #}

                {% for reference in property.relationship_reference %}
                    <{{ tagname }}>
                        {% with "questionnaire/serialization/ESDOC_XML/_reference.xml" as template %}
                            {%  include template %}
                        {% endwith %}
                    </{{ tagname }}>
                {% endfor %} {# /reference #}

                {% for value in property.get_value %}
                    {# TODO: IF IS_REFERENCE... #}
                    <{{ tagname }}>
                        {% with model=value model_type=value.name.lower %}
                            {% with "questionnaire/serialization/ESDOC_XML/_model.xml" as template %}
                                {% include template %}
                            {% endwith %}
                        {% endwith %} {# /model #}
                    </{{ tagname }}>
                {% endfor %} {# /value #}

                {% if property.proxy.is_multiple %}
                    </{{ tagname|get_plural }}>
                {% endif %} {# /is_multiple #}

            {% endif %} {# /property_type #}
        {% endwith %} {# /property_type #}

    {% endif %}

{% endwith %} {# /tagname #}